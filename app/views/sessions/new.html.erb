<% provide(:title, "Log in") %>

<div class="login_box">
  <div class="row form_elements">
    <div class="img_box"></div>
    <div class="col-md-6 col-md-offset-3 formBox">
      <div class="login_head">
          <h1>Log in</h1>
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    
          <!--<%= f.label :email %> -->
          <%= f.email_field :email, class: 'form-control login_input', placeholder: "EMAIL"%>
    
          <!--<%= f.label :password %> -->
          <%= f.password_field :password, class: 'form-control login_input', placeholder: "PASSWORD" %>
    
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>Remember me</span>
          <% end %>
    
          <%= f.submit "Log in", class: "btn login_btn" %>
        <% end %>
        <div class="sign_up">
          <p>New user? <%= link_to "Sign up now!", signup_path, class: "sign_up_link" %></p>
        </div>
      </div>
    </div>
  </div>
</div>